<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/my_stud_stud_recy_item_recy_card_vw_id"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/my_stud_stud_recy_item_img_vw_id"
                android:layout_height="60dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="70dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="70dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:layout_centerHorizontal="true"
                    android:text="name"
                    android:id="@+id/my_stud_stud_recy_item_name_txt_id"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:text="time"
                    android:id="@+id/my_stud_stud_recy_item_time_txt_id"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageButton
                android:layout_width="40dp"
                android:layout_alignParentRight="true"
                android:id="@+id/my_stud_stud_recy_item_del_btn_id"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_margin="10dp"
                android:layout_height="40dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:text="class not assigned "
            android:visibility="gone"
            android:id="@+id/my_stud_stud_recy_item_not_Assigned_txt_id"
            android:ellipsize="end"
            android:layout_height="wrap_content" />
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/my_stud_stud_recy_item_subs_chip_grp_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >

        </com.google.android.material.chip.ChipGroup>
    </LinearLayout>
</androidx.cardview.widget.CardView>